::-webkit-scrollbar
    width: 10px

::-webkit-scrollbar-track
    background-color: hsl(0,0%,40%)

::-webkit-scrollbar-thumb
    background: #111
    transition: all 0.2s ease-out

    &:active
        background: hsl(24,100%,50%)

::-webkit-selection
    background: hsl(24,100%,50%)
    color: hsl(0, 0%, 05%)

